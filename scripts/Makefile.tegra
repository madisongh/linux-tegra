define tegra_include
  ifneq ("$(wildcard $(kbuild-dir)/Makefile.$(1))", "")
    include $(kbuild-dir)/Makefile.$(1)
    EXTRA_CFLAGS += -I$(srctree)/nvidia/$(1)/include
  endif
endef

$(foreach suffix, \
	t18x nvgpu nvhost nvmap nvmap-t18x display \
	t19x, \
	$(eval $(call tegra_include,$(suffix))))
